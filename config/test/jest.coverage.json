{
  "rootDir": "../../",
  "preset": "ts-jest",
  "restoreMocks": true,
  "moduleDirectories": ["<rootDir>/src", "node_modules"],
  "setup7FilesAfterEnv": ["<rootDir>/config/test/setup-after.ts"],
  "collectCoverage": true,
  "coverageReporters": ["text", "html"],
  "coveragePathIgnorePatterns": ["/node_modules/", "common/test"],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "function": 80,
      "lines": 80,
      "statements": 80
    }
  }
}
